<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/color_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplestorybold"
                android:text="색상변경"
                app:backgroundTint="@color/color4"
                app:cornerRadius="@dimen/action_button_height"
                app:icon="@android:drawable/btn_star_big_on" />


            <Button
                android:id="@+id/erasebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplestorybold"
                android:text="전체 지우기"
                app:backgroundTint="@color/color4"
                app:cornerRadius="@dimen/action_button_height" />

            <Button
                android:id="@+id/imgsend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplestorybold"
                android:text="send"
                android:visibility="invisible"
                app:backgroundTint="@color/color3"
                app:cornerRadius="@dimen/action_button_min_width" />

            <TextView
                android:id="@+id/word"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maplestorybold"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gamebuggigif" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/myid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/maplestorybold"
                    android:text="myid" />

                <TextView
                    android:id="@+id/myscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/maplestorylight"
                    android:text="myscore" />
            </LinearLayout>


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gamebuggigif" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/yourid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/maplestorybold"
                    android:text="yourid" />

                <TextView
                    android:id="@+id/yourscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/maplestorylight"
                    android:text="yourscore" />



            </LinearLayout>

            <TextView
                android:id="@+id/hint"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/maplestorybold"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.androidchat.MyView
            android:id="@+id/myView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/divider_horizontal_dark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/skipbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/maplestorybold"
                android:text="포기"
                app:backgroundTint="@android:color/holo_red_light"
                app:cornerRadius="@dimen/action_button_height" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="238dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/maplestorylight"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/hintbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:fontFamily="@font/maplestorybold"
                android:text="힌트"
                app:backgroundTint="@color/color9"
                app:cornerRadius="@dimen/action_button_height" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LoginView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/maplestorybold"
                android:text="시작하기"
                app:backgroundTint="@color/color3"
                app:cornerRadius="@dimen/action_button_height" />

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/maplestorybold"
                android:gravity="center_horizontal"
                android:text="User Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/btnEnter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/maplestorybold"
                android:gravity="center"
                android:text="입장하기"
                app:backgroundTint="@color/color3"
                app:cornerRadius="@dimen/action_button_height" />
        </LinearLayout>


        <TextView
            android:id="@+id/txtView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_light"
            android:drawableStart="@drawable/realbuggi"
            android:drawableLeft="@drawable/realbuggi"
            android:fontFamily="@font/maplestorybold"
            android:lines="50" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtInput"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/maplestorybold"
                android:inputType="textPersonName"
                android:visibility="visible"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/maplestorybold"
                android:gravity="center"
                android:text="Send"
                android:visibility="visible"
                app:backgroundTint="@android:color/holo_green_light"
                app:cornerRadius="@dimen/activity_horizontal_margin"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>